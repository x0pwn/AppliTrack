@page
@model AppliTrack.Pages_Notes.CreateModel

@{
    ViewData["Title"] = "Create Note";
}

<h1>Create Note</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note.Text" class="control-label"></label>
                <input asp-for="Note.Text" class="form-control" />
                <span asp-validation-for="Note.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Timestamp" class="control-label"></label>
                <input asp-for="Note.Timestamp" class="form-control" />
                <span asp-validation-for="Note.Timestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.ApplicationId" class="control-label"></label>
                <select asp-for="Note.ApplicationId" class ="form-control" asp-items="ViewBag.ApplicationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
